<div class="row">
    <div class="col-6 mx-auto">
        <%= form_for @topic do |f| %>
            <%= render "error_messages"%>
            <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: "form-control"%>
            </div>

            <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: "form-control"%>
            </div>
            <%= f.submit class: "btn btn-primary w-100"%>
        <% end %>
    </div>
</div>